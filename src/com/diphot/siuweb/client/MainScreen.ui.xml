<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.body{
			width: 900px;
			padding : 10px;
			height: 100%;
			background-color: red;
			float: center;
		}
		.menu {
			float: left;
			/*padding: 10px;*/
			width: 150px;
			height: 100%;
			background-color: green;
		}
		.desktop {
			float: right;
			/*padding: 10px;*/
			width: 750px;
			height: 100%;
			background-color: purple;
		}
	</ui:style>
	<g:FlowPanel ui:field="body" styleName="{style.body}">
		<g:FlowPanel ui:field="menuPanel" styleName="{style.menu}"/>
		<g:FlowPanel ui:field="desktop" styleName="{style.desktop}"/>
	</g:FlowPanel>
</ui:UiBinder> 